"
" ~/.config/nvim/general/settings.vim
" ~/.vim/general/settings.vim
"

" Display
set number
set nowrap
set colorcolumn=80

" Syntax
syntax on

" Mouse
set mouse=a

" Tabs & indenting
set tabstop=2
set shiftwidth=2
set smarttab
set softtabstop=2
set shiftround
set expandtab
set autoindent
set smartindent

" Clipboard
set clipboard=unnamed
